{
  "compilerOptions": {
    "outDir": ".",
    "baseUrl": ".",
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "types": [],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "smooth-scrollbar-deluxe": ["src/index"],
      "smooth-scrollbar-deluxe/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
